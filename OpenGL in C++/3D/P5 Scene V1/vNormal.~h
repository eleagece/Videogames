//---------------------------------------------------------------------------
#ifndef VNormalH
#define VNormalH
// Include ------------------------------------------------------------------

//---------------------------------------------------------------------------
// Tipos --------------------------------------------------------------------
//---------------------------------------------------------------------------
// clases -------------------------------------------------------------------
/* Representa un par de índices */
class VNormal
{
private:	// User declarations
        int _v;
        int _n;

public:		// User declarations
        // Constructora
        VNormal(int v,int n){_v=v; _n=n;}

        // Gets & Sets
        double getV(){return _v;}
        double getN(){return _n;}
        void setV(int v){_v=v;}
        void setN(int n){_n=n;}
};
//---------------------------------------------------------------------------
#endif
#pragma hdrstop
#include "Objeto3D.h"
#pragma package(smart_init)

//****************************************************************************//
//*** Constructoras y destructora ********************************************//
//****************************************************************************//
Objeto3D::Objeto3D()
 {
 //---- Constructora por defecto ---------------------------------------------//
 //---------------------------------------------------------------------------//
 color=new Color(0,0,0);  // Color negro
 m=new TAfin();  // TAfin por defecto
 }

Objeto3D::~Objeto3D()
 {
 //---- Destructora ----------------------------------------------------------//
 //-- Es un método virtual, aquí sólo se ejecuta la parte común de todos    --//
 //-- hijos, es decir, eliminar el color y la transformación afín           --//
 //---------------------------------------------------------------------------//
 delete color;
 delete m;
 }

//****************************************************************************//
//*** Métodos públicos *******************************************************//
//****************************************************************************//
TAfin* Objeto3D::getTAfin()
 {
 //---- getTAfin() -----------------------------------------------------------//
 //-- Devuelve la transformación afín del objeto                            --//
 //---------------------------------------------------------------------------//
 return m;
 }

Color* Objeto3D::getColor()
 {
 //---- getColor() -----------------------------------------------------------//
 //-- Devuelve el color del objeto                                          --//
 //---------------------------------------------------------------------------//
 return color;
 }

void Objeto3D::setColor(float r, float g, float b)
 {
 //---- setColor() -----------------------------------------------------------//
 //-- Pone color al objeto variando sus valores 'r', 'g' y 'b'              --//
 //---------------------------------------------------------------------------//
 color->setR(r);
 color->setG(g);
 color->setB(b);
 }

